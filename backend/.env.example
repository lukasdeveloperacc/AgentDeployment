# OpenAI API Key (필수)
OPENAI_API_KEY=sk-...

# ChromaDB 설정 (로컬 파일 기반)
CHROMA_PERSIST_DIR=./chroma_db

# 애플리케이션 설정
APP_ENV=development
LOG_LEVEL=INFO

# CORS 설정 (프론트엔드 URL)
CORS_ORIGINS=http://localhost:3000

# LLM 설정
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# RAG 설정
RAG_TOP_K=3
EMBEDDING_MODEL=text-embedding-3-small
